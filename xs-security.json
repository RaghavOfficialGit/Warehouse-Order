{
  "xsappname": "warehouse-order-service",
  "tenant-mode": "dedicated",
  "description": "Security configuration for Warehouse Order Service",
  "scopes": [
    {
      "name": "$XSAPPNAME.Display",
      "description": "Display warehouse orders"
    },
    {
      "name": "$XSAPPNAME.Edit",
      "description": "Edit warehouse orders"
    },
    {
      "name": "$XSAPPNAME.Admin",
      "description": "Administrative access to warehouse orders"
    }
  ],
  "role-templates": [
    {
      "name": "WarehouseOrderViewer",
      "description": "View warehouse orders",
      "scope-references": [
        "$XSAPPNAME.Display"
      ],
      "attribute-references": []
    },
    {
      "name": "WarehouseOrderEditor",
      "description": "Edit warehouse orders",
      "scope-references": [
        "$XSAPPNAME.Display",
        "$XSAPPNAME.Edit"
      ],
      "attribute-references": []
    },
    {
      "name": "WarehouseOrderAdmin",
      "description": "Administrative access",
      "scope-references": [
        "$XSAPPNAME.Display",
        "$XSAPPNAME.Edit",
        "$XSAPPNAME.Admin"
      ],
      "attribute-references": []
    }
  ],
  "oauth2-configuration": {
    "redirect-uris": [
      "https://*.hana.ondemand.com/**",
      "http://localhost:4004/**"
    ]
  },
  "foreign-scope-references": [
    "$XSAPPNAME.scope"
  ]
}
