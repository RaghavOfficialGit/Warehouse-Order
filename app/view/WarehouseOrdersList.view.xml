<mvc:View
    xmlns:mdc="sap.ui.mdc"
    xmlns:mdcfield="sap.ui.mdc.field"
    xmlns:form="sap.ui.layout.form"
    xmlns:smartfilterbar="sap.ui.comp.smartfilterbar"
    xmlns:smarttable="sap.ui.comp.smarttable"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    controllerName="sap.fe.templates.ListReport.controller.ListReportController"
    entitySet="WarehouseOrders">
    
    <mdc:ListReport
        id="ListReport"
        enableAutoBinding="true"
        entitySet="WarehouseOrders"
        smartVariant="true"
        useSmartField="true"
        contextPath="/WarehouseOrders">
        
        <mdc:filterBar>
            <smartfilterbar:SmartFilterBar
                id="filterBar"
                entitySet="WarehouseOrders"
                persistencyKey="SmartFilter_Explored"
                enableBasicSearch="true"
                basicSearchFieldName="WarehouseOrder"
                considerSelectionVariant="true"
                liveMode="true">
                <smartfilterbar:controlConfiguration>
                    <smartfilterbar:ControlConfiguration
                        key="EWMWarehouse"
                        index="1"
                        label="{i18n>EWMWarehouse}"
                        visibleInAdvancedArea="true">
                    </smartfilterbar:ControlConfiguration>
                    <smartfilterbar:ControlConfiguration
                        key="WarehouseOrder"
                        index="2"
                        label="{i18n>WarehouseOrder}"
                        visibleInAdvancedArea="true">
                    </smartfilterbar:ControlConfiguration>
                    <smartfilterbar:ControlConfiguration
                        key="WarehouseOrderStatus"
                        index="3"
                        label="{i18n>WarehouseOrderStatus}"
                        visibleInAdvancedArea="true">
                    </smartfilterbar:ControlConfiguration>
                    <smartfilterbar:ControlConfiguration
                        key="Processor"
                        index="4"
                        label="{i18n>Processor}"
                        visibleInAdvancedArea="true">
                    </smartfilterbar:ControlConfiguration>
                </smartfilterbar:controlConfiguration>
            </smartfilterbar:SmartFilterBar>
        </mdc:filterBar>
        
        <mdc:table>
            <smarttable:SmartTable
                id="LineItemSmartTable"
                entitySet="WarehouseOrders"
                smartFilterId="filterBar"
                tableType="ResponsiveTable"
                useExportToExcel="false"
                useVariantManagement="false"
                useTablePersonalisation="true"
                header="{i18n>warehouseOrdersTitle}"
                showRowCount="true"
                enableAutoBinding="true"
                persistencyKey="SmartTableAnalytical_Explored"
                demandPopin="true"
                enableAutoColumnWidth="true">
                
                <smarttable:customToolbar>
                    <mdc:OverflowToolbar>
                        <mdc:ToolbarSpacer/>
                        <mdc:Button
                            id="refreshBtn"
                            text="{i18n>refresh}"
                            press="onRefresh"
                            icon="sap-icon://refresh"
                            type="Transparent"/>
                    </mdc:OverflowToolbar>
                </smarttable:customToolbar>
                
                <smarttable:customData>
                    <cd:CustomData key="useSmartField" value="true"/>
                </smarttable:customData>
                
                <mdc:columns>
                    <mdc:Column
                        id="EWMWarehouseColumn"
                        header="{i18n>EWMWarehouse}"
                        importance="High"
                        width="120px">
                        <mdc:field>
                            <mdcfield:Field
                                id="EWMWarehouseField"
                                value="{EWMWarehouse}"
                                editable="false"/>
                        </mdc:field>
                    </mdc:Column>
                    <mdc:Column
                        id="WarehouseOrderColumn"
                        header="{i18n>WarehouseOrder}"
                        importance="High"
                        width="150px">
                        <mdc:field>
                            <mdcfield:Field
                                id="WarehouseOrderField"
                                value="{WarehouseOrder}"
                                editable="false"/>
                        </mdc:field>
                    </mdc:Column>
                    <mdc:Column
                        id="WarehouseOrderStatusColumn"
                        header="{i18n>WarehouseOrderStatus}"
                        importance="High"
                        width="120px">
                        <mdc:field>
                            <mdcfield:Field
                                id="WarehouseOrderStatusField"
                                value="{WarehouseOrderStatus}"
                                editable="false"/>
                        </mdc:field>
                    </mdc:Column>
                    <mdc:Column
                        id="WhseOrderCreationDateTimeColumn"
                        header="{i18n>WhseOrderCreationDateTime}"
                        importance="Medium"
                        width="180px">
                        <mdc:field>
                            <mdcfield:Field
                                id="WhseOrderCreationDateTimeField"
                                value="{WhseOrderCreationDateTime}"
                                editable="false"/>
                        </mdc:field>
                    </mdc:Column>
                    <mdc:Column
                        id="ProcessorColumn"
                        header="{i18n>Processor}"
                        importance="Medium"
                        width="120px">
                        <mdc:field>
                            <mdcfield:Field
                                id="ProcessorField"
                                value="{Processor}"
                                editable="false"/>
                        </mdc:field>
                    </mdc:Column>
                    <mdc:Column
                        id="ActivityAreaColumn"
                        header="{i18n>ActivityArea}"
                        importance="Low"
                        width="120px">
                        <mdc:field>
                            <mdcfield:Field
                                id="ActivityAreaField"
                                value="{ActivityArea}"
                                editable="false"/>
                        </mdc:field>
                    </mdc:Column>
                </mdc:columns>
            </smarttable:SmartTable>
        </mdc:table>
    </mdc:ListReport>
</mvc:View>
